{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": [
    "types.d.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
